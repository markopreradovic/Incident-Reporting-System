@page "/login"
@using System.Net.Http.Headers
@inject HttpClient Http
@inject IJSRuntime JS
@inject NavigationManager Navigation
@inject AuthenticationStateProvider AuthProvider

<div class="dark-container">
    <div class="login-wrapper">
        <!-- PRIJAVA SEKCIJA -->
        <div class="header-section">
            <h3 class="page-title">
                Prijava u sistem
            </h3>
        </div>

        <div class="form-container">
            <EditForm Model="@loginModel" OnValidSubmit="@HandleLogin">
                <DataAnnotationsValidator />
                <ValidationSummary />

                <div class="form-group">
                    <label class="form-label">
                        Korisničko ime
                    </label>
                    <InputText @bind-Value="loginModel.Username" class="form-input" placeholder="Unesite korisničko ime" />
                </div>

                <div class="form-group">
                    <label class="form-label">
                        Lozinka
                    </label>
                    <InputText @bind-Value="loginModel.Password" type="password" class="form-input" placeholder="Unesite lozinku" />
                </div>

                <button type="submit" class="submit-button" disabled="@isLoginLoading">
                    @if (isLoginLoading)
                    {
                        <span>Prijava u toku...</span>
                    }
                    else
                    {
                        <span>Prijavi se</span>
                    }
                </button>
            </EditForm>

            @if (!string.IsNullOrEmpty(loginMessage))
            {
                <div class="@(isLoginSuccess ? "alert-success" : "alert-danger")">
                    <span class="alert-icon">@(isLoginSuccess ? "✓" : "✗")</span>
                    @loginMessage
                </div>
            }
        </div>

        <!-- REGISTRACIJA SEKCIJA -->
        <div class="header-section" style="margin-top: 3rem;">
            <h3 class="page-title">
                Registracija novog korisnika
            </h3>
        </div>

        <div class="form-container">
            <EditForm Model="@registerModel" OnValidSubmit="@HandleRegister">
                <DataAnnotationsValidator />
                <ValidationSummary />

                <div class="form-group">
                    <label class="form-label">
                        Korisničko ime *
                    </label>
                    <InputText @bind-Value="registerModel.Username" class="form-input" placeholder="Izaberite korisničko ime" />
                    <small class="form-hint">Korisničko ime mora biti jedinstveno</small>
                </div>

                <div class="form-group">
                    <label class="form-label">
                        Puno ime i prezime *
                    </label>
                    <InputText @bind-Value="registerModel.FullName" class="form-input" placeholder="Npr. Marko Marković" />
                </div>

                <div class="form-group">
                    <label class="form-label">
                        Email adresa *
                    </label>
                    <InputText @bind-Value="registerModel.Email" type="email" class="form-input" placeholder="korisnik@example.com" />
                </div>

                <div class="form-group">
                    <label class="form-label">
                        Lozinka *
                    </label>
                    <InputText @bind-Value="registerModel.Password" type="password" class="form-input" placeholder="Minimum 6 karaktera" />
                    <small class="form-hint">Lozinka mora imati najmanje 6 karaktera</small>
                </div>

                <div class="form-group">
                    <label class="form-label">
                        Ponovljena lozinka *
                    </label>
                    <InputText @bind-Value="registerModel.ConfirmPassword" type="password" class="form-input" placeholder="Ponovite lozinku" />
                </div>

                <button type="submit" class="submit-button" disabled="@isRegisterLoading">
                    @if (isRegisterLoading)
                    {
                        <span>Registracija u toku...</span>
                    }
                    else
                    {
                        <span>Registruj se</span>
                    }
                </button>
            </EditForm>

            @if (!string.IsNullOrEmpty(registerMessage))
            {
                <div class="@(isRegisterSuccess ? "alert-success" : "alert-danger")">
                    <span class="alert-icon">@(isRegisterSuccess ? "✓" : "✗")</span>
                    @registerMessage
                </div>
            }
        </div>
    </div>
</div>

