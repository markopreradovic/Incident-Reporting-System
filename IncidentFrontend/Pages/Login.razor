@code {
    // Login model i state
    private LoginModel loginModel = new();
    private string loginMessage = "";
    private bool isLoginSuccess = false;
    private bool isLoginLoading = false;

    // Register model i state
    private RegisterModel registerModel = new();
    private string registerMessage = "";
    private bool isRegisterSuccess = false;
    private bool isRegisterLoading = false;

    private async Task HandleLogin()
    {
        isLoginLoading = true;
        loginMessage = "";
        StateHasChanged();

        try
        {
            var response = await Http.PostAsJsonAsync("http://localhost:5000/api/auth/login", loginModel);

            if (response.IsSuccessStatusCode)
            {
                var result = await response.Content.ReadFromJsonAsync<AuthResponse>();

                await JS.InvokeVoidAsync("localStorage.setItem", "authToken", result!.Token);

                ((JwtAuthenticationStateProvider)AuthProvider).NotifyUserChanged();

                var authState = await AuthProvider.GetAuthenticationStateAsync();
                var user = authState.User;

                loginMessage = $"Dobrodošao, {user.Identity?.Name ?? loginModel.Username}!";
                isLoginSuccess = true;

                if (user.IsInRole("Admin"))
                {
                    Navigation.NavigateTo("/admin", true);
                }
                else if (user.IsInRole("Moderator"))
                {
                    Navigation.NavigateTo("/moderation", true);
                }
                else
                {
                    Navigation.NavigateTo("/report", true);
                }
            }
            else
            {
                loginMessage = "Pogrešno korisničko ime ili lozinka.";
                isLoginSuccess = false;
            }
        }
        catch (Exception ex)
        {
            loginMessage = "Greška prilikom prijave. Molimo pokušajte ponovo.";
            isLoginSuccess = false;
        }
        finally
        {
            isLoginLoading = false;
            StateHasChanged();
        }
    }

    private async Task HandleRegister()
    {
        string registerConfirmPasswordError = "";
        registerMessage = "";

        if (string.IsNullOrWhiteSpace(registerModel.Username))
        {
            registerMessage = "Korisničko ime je obavezno.";
            StateHasChanged();
            return;
        }

        if (string.IsNullOrWhiteSpace(registerModel.Email))
        {
            registerMessage = "Email je obavezan.";
            StateHasChanged();
            return;
        }

        if (string.IsNullOrWhiteSpace(registerModel.FullName))
        {
            registerMessage = "Puno ime je obavezno.";
            StateHasChanged();
            return;
        }

        if (string.IsNullOrWhiteSpace(registerModel.Password))
        {
            registerConfirmPasswordError = "Lozinka je obavezna.";
            StateHasChanged();
            return;
        }

        if (registerModel.Password != registerModel.ConfirmPassword)
        {
            registerConfirmPasswordError = "Lozinke se ne poklapaju.";
            StateHasChanged();
            return;
        }

        isRegisterLoading = true;
        StateHasChanged();

        try
        {
            var registerRequest = new
            {
                Username = registerModel.Username,
                Password = registerModel.Password,
                Email = registerModel.Email,
                FullName = registerModel.FullName,
                Role = "User"  
            };

            var response = await Http.PostAsJsonAsync("/api/auth/register", registerRequest);

            if (response.IsSuccessStatusCode)
            {
                registerMessage = "Registracija uspešna! Sada se možete prijaviti.";
                isRegisterSuccess = true;
                registerModel = new(); 
            }
            else
            {
                var errorContent = await response.Content.ReadAsStringAsync();
                registerMessage = $"Greška pri registraciji: {response.StatusCode} - {errorContent}";
                isRegisterSuccess = false;
            }
        }
        catch (Exception ex)
        {
            registerMessage = $"Došlo je do greške: {ex.Message}";
            isRegisterSuccess = false;
        }
        finally
        {
            isRegisterLoading = false;
            StateHasChanged();
        }
    }

    public class LoginModel
    {
        public string Username { get; set; } = "";
        public string Password { get; set; } = "";
    }

    public class RegisterModel
    {
        public string Username { get; set; } = "";
        public string Password { get; set; } = "";
        public string ConfirmPassword { get; set; } = "";
        public string Email { get; set; } = "";
        public string FullName { get; set; } = "";
    }

    public class AuthResponse
    {
        public string Token { get; set; } = "";
        public UserInfo User { get; set; } = new();

        public class UserInfo
        {
            public string UserName { get; set; } = "";
            public string FullName { get; set; } = "";
            public string Role { get; set; } = "";
        }
    }
}