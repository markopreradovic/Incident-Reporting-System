@code {
    private const string GATEWAY_URL = "http://localhost:5000";
    private HttpClient _http = default!;

    // Pending incidents
    private List<PendingIncident> pendingIncidents = new();
    private bool isLoading = true;
    private bool isProcessing = false;
    private string message = "";
    private bool isSuccess = false;

    // Analytics data
    private int totalIncidents = 0;
    private int pendingCount = 0;
    private int approvedCount = 0;
    private int rejectedCount = 0;
    private List<TypeStat> typeStats = new();
    private List<DateStat> dateStats = new();

    protected override async Task OnInitializedAsync()
    {
        _http = HttpClientFactory.CreateClient("AuthenticatedClient");

        // Paralelno učitavanje podataka
        await Task.WhenAll(
            LoadPending(),
            LoadAnalytics()
        );
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JS.InvokeVoidAsync("initPendingMap");
            await ShowPendingOnMap();
        }

        // Crtaj grafike svaki put kada se komponenta renderuje i ima podataka
        if (typeStats.Any() || dateStats.Any())
        {
            await JS.InvokeVoidAsync("drawAnalyticsCharts", typeStats, dateStats);
        }
    }

    private async Task LoadAnalytics()
    {
        try
        {
            // Summary
            var summary = await _http.GetFromJsonAsync<SummaryDto>("/api/analytics/summary");
            if (summary != null)
            {
                totalIncidents = summary.Total;
                pendingCount = summary.Pending;
                approvedCount = summary.Approved;
                rejectedCount = summary.Rejected;
            }

            // By type
            typeStats = await _http.GetFromJsonAsync<List<TypeStat>>("/api/analytics/by-type") ?? new();

            // By date
            dateStats = await _http.GetFromJsonAsync<List<DateStat>>("/api/analytics/by-date") ?? new();

            // Log podatke za debug
            Console.WriteLine($"Type stats: {typeStats.Count}");
            Console.WriteLine($"Date stats: {dateStats.Count}");

            StateHasChanged(); // Forsiraj re-render
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading analytics: {ex.Message}");
        }
    }

    private async Task LoadPending()
    {
        isLoading = true;
        message = "";
        StateHasChanged();

        try
        {
            var response = await _http.GetAsync("/api/moderation/pending");

            if (response.IsSuccessStatusCode)
            {
                pendingIncidents = await response.Content.ReadFromJsonAsync<List<PendingIncident>>() ?? new();

                foreach (var incident in pendingIncidents)
                {
                    if (!string.IsNullOrEmpty(incident.ImageUrl))
                    {
                        if (incident.ImageUrl.StartsWith("/"))
                            incident.ImageUrl = GATEWAY_URL + incident.ImageUrl;
                        else if (!incident.ImageUrl.StartsWith("http"))
                            incident.ImageUrl = GATEWAY_URL + "/" + incident.ImageUrl;
                    }
                }

                await ShowPendingOnMap();
            }
            else
            {
                message = "Greška pri učitavanju incidenata.";
            }
        }
        catch (Exception ex)
        {
            message = $"Greška: {ex.Message}";
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private async Task ShowPendingOnMap()
    {
        await JS.InvokeVoidAsync("showPendingOnMap", pendingIncidents);
    }

    private async Task Approve(int id)
    {
        await ChangeStatus(id, "odobren");
    }

    private async Task Reject(int id)
    {
        await ChangeStatus(id, "odbijen");
    }

    private async Task ChangeStatus(int id, string action)
    {
        isProcessing = true;
        StateHasChanged();

        try
        {
            var endpoint = action == "odobren" ? $"approve/{id}" : $"reject/{id}";
            var response = await _http.PostAsync($"/api/moderation/{endpoint}", null);

            if (response.IsSuccessStatusCode)
            {
                message = $"Incident {id} uspješno {action}!";
                isSuccess = true;

                // Ponovo učitaj i analytics i pending
                await Task.WhenAll(
                    LoadPending(),
                    LoadAnalytics()
                );
            }
            else
            {
                message = $"Greška pri {action}ju incidenta {id}.";
                isSuccess = false;
            }
        }
        catch (Exception ex)
        {
            message = $"Greška: {ex.Message}";
            isSuccess = false;
        }
        finally
        {
            isProcessing = false;
            StateHasChanged();
        }
    }

    private async Task Logout()
    {
        await JS.InvokeVoidAsync("localStorage.removeItem", "authToken");
        Navigation.NavigateTo("/login", true);
    }

    private string GetTypeName(int typeId)
    {
        return typeId switch
        {
            1 => "Saobraćajni problem",
            2 => "Komunalni problem",
            3 => "Javni red i mir",
            _ => "Nepoznato"
        };
    }

    // DTOs
    public class PendingIncident
    {
        public int Id { get; set; }
        public double Latitude { get; set; }
        public double Longitude { get; set; }
        public int TypeId { get; set; }
        public int? SubTypeId { get; set; }
        public string Description { get; set; } = "";
        public string? ImageUrl { get; set; }
        public DateTime CreatedAt { get; set; }
    }

    private class SummaryDto
    {
        public int Total { get; set; }
        public int Pending { get; set; }
        public int Approved { get; set; }
        public int Rejected { get; set; }
    }

    private class TypeStat
    {
        public int TypeId { get; set; }
        public int Count { get; set; }
        public string TypeName { get; set; } = "";
    }

    private class DateStat
    {
        public string Date { get; set; } = "";
        public int Count { get; set; }
    }
}